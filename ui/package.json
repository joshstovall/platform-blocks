{
  "name": "@platform-blocks/ui",
  "version": "0.6.1",
  "description": "A React Native UI library",
  "type": "module",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/index.d.ts",
  "react-native": "./lib/esm/index.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "react-native": "./lib/esm/index.js",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "default": "./lib/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && rollup -c && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "clean": "rm -rf lib || true",
    "generate:llms": "tsx ../scripts/generate-llms.ts",
    "prepare": "sh -c 'if [ \"$BUILD_ON_PREPARE\" = \"1\" ]; then npm run build; else echo \"ui: skipping build on prepare (set BUILD_ON_PREPARE=1 to enable)\"; fi'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:update": "jest --updateSnapshot",
    "test:component": "jest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint src --max-warnings 0",
    "format": "eslint src --fix && echo 'Code formatted successfully!'",
    "precommit": "npm run lint:check && npm run test"
  },
  "keywords": [
    "react-native",
    "ui",
    "components",
    "typescript",
    "library"
  ],
  "author": "Josh Stovall",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshstovall/platform-blocks.git"
  },
  "bugs": {
    "url": "https://github.com/joshstovall/platform-blocks/issues"
  },
  "homepage": "https://github.com/joshstovall/platform-blocks#readme",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-flow": "^7.27.0",
    "@babel/preset-react": "^7.28.0",
    "@babel/preset-typescript": "^7.28.0",
    "@react-native/babel-preset": "^0.83.0",
    "@react-native-masked-view/masked-view": "^0.3.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@shopify/flash-list": "^2.2.0",
    "@testing-library/react-native": "^13.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "expo-audio": "^1.1.0",
    "expo-document-picker": "^14.0.0",
    "expo-haptics": "^15.0.0",
    "expo-linear-gradient": "^15.0.0",
    "expo-status-bar": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "jest-expo": "^54.0.0",
    "react": "19.2.0",
    "react-native": "0.83.1",
    "react-native-reanimated": "~4.2.1",
    "react-native-reanimated-carousel": "^4.0.0",
    "react-native-safe-area-context": "^5.6.0",
    "react-native-svg": "15.15.1",
    "react-native-worklets": "0.7.2",
    "react-syntax-highlighter": "^16.1.0",
    "react-test-renderer": "19.2.0",
    "rollup": "^4.57.0",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.54.0"
  },
  "peerDependencies": {
    "@react-native-masked-view/masked-view": ">=0.3.0",
    "@shopify/flash-list": ">=1.6.0",
    "expo-audio": ">=1.0.0",
    "expo-document-picker": ">=13.0.0",
    "expo-haptics": ">=14.0.0",
    "expo-linear-gradient": ">=12.0.0",
    "expo-status-bar": ">=1.12.0",
    "react": ">=18.0.0",
    "react-native": ">=0.73.0",
    "react-native-reanimated": ">=3.4.0",
    "react-native-reanimated-carousel": ">=3.4.0",
    "react-native-safe-area-context": ">=4.5.0",
