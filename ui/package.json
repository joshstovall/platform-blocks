{
  "name": "@platform-blocks/ui",
  "version": "0.4.0",
  "description": "A React Native UI library",
  "type": "module",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/index.d.ts",
  "react-native": "./lib/esm/index.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "react-native": "./lib/esm/index.js",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "default": "./lib/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && rollup -c && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "clean": "rm -rf lib || true",
    "generate:llms": "tsx ../scripts/generate-llms.ts",
    "prepare": "sh -c 'if [ \"$BUILD_ON_PREPARE\" = \"1\" ]; then npm run build; else echo \"ui: skipping build on prepare (set BUILD_ON_PREPARE=1 to enable)\"; fi'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:update": "jest --updateSnapshot",
    "test:component": "jest",
    "lint": "eslint src --ext .ts,.tsx --ignore-path .eslintignore",
    "lint:fix": "eslint src --ext .ts,.tsx --fix --ignore-path .eslintignore",
    "lint:check": "eslint src --ext .ts,.tsx --max-warnings 0",
    "format": "eslint src --ext .ts,.tsx --fix && echo 'Code formatted successfully!'",
    "precommit": "npm run lint:check && npm run test"
  },
  "keywords": [
    "react-native",
    "ui",
    "components",
    "typescript",
    "library"
  ],
  "author": "Josh Stovall",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshstovall/platform-blocks.git"
  },
  "bugs": {
    "url": "https://github.com/joshstovall/platform-blocks/issues"
  },
  "homepage": "https://github.com/joshstovall/platform-blocks#readme",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-flow": "^7.27.1",
    "@babel/preset-react": "^7.25.0",
    "@babel/preset-typescript": "^7.25.0",
    "@eslint/js": "^8.57.1",
    "@react-native/babel-preset": "^0.81.4",
    "@react-native-masked-view/masked-view": "^0.3.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@shopify/flash-list": "^2.1.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "expo-audio": "^1.0.13",
    "expo-document-picker": "~14.0.7",
    "expo-haptics": "^15.0.0",
    "expo-linear-gradient": "^14.1.5",
    "expo-status-bar": "^1.12.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-expo": "^54.0.12",
    "metro-react-native-babel-preset": "^0.77.0",
    "react": "^19.1.0",
    "react-native": "0.81.4",
    "react-native-reanimated": "~4.1.1",
    "react-native-reanimated-carousel": "^4.0.3",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-svg": "^15.12.1",
    "react-syntax-highlighter": "^16.1.0",
    "react-test-renderer": "19.1.0",
    "rollup": "^4.52.3",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "peerDependencies": {
    "@react-native-masked-view/masked-view": ">=0.2.9",
    "@shopify/flash-list": ">=1.6.0",
    "expo-document-picker": ">=13.0.0",
    "expo-linear-gradient": ">=12.0.0",
    "expo-audio": ">=1.0.0",
    "expo-haptics": ">=14.0.0",
    "expo-status-bar": ">=1.12.0",
    "react": ">=18.0.0 <20.0.0",
    "react-native": ">=0.73.0",
    "react-native-reanimated": ">=3.4.0",
    "react-native-reanimated-carousel": ">=3.4.0",
    "react-native-safe-area-context": ">=4.5.0",
    "react-native-svg": ">=13.0.0",
    "react-syntax-highlighter": ">=15.0.0"
  },
  "peerDependenciesMeta": {
    "expo-audio": {
      "optional": true
    },
    "expo-haptics": {
      "optional": true
    },
    "expo-status-bar": {
      "optional": true
    },
    "react-syntax-highlighter": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "lottie-react": "^2.4.1",
    "@lottiefiles/dotlottie-react": "^0.13.5",
    "lottie-react-native": "^7.3.4"
  }
}
